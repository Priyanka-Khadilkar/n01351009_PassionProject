@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="panel panel-primary top">
    <div class="panel-heading header-color">
        Add Region
    </div>
    <div class="panel-body">
        <form class="form-horizontal" method="post" action="/Region/New">
            <div class="form-group">
                <label class="control-label col-sm-2" for="RegionName">Region Name:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="RegionName" placeholder="Enter region name" name="RegionName">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" id="BtnSubmit" class="btn btn-success">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>
<a href="/Cuisine/List" class="btn btn-primary headtop">Back to list</a>